<div class="row">
  <div class="col s7">
    <%= render :partial => "family_details" %>
  </div>
  <div class="col s5">
    <%= render :partial => "family_students" %>
  </div>
</div>
<div class="row">
  <div class="col s12">
    <% if logged_in? && current_user.role?(:admin) %>
      <%= render :partial => "partials/object_options", locals: {model_name: "family", object: @family} %>
    <% elsif logged_in? && current_user.role?(:parent) %>
      <%= link_to(eval("edit_family_path(@family)"), class: "btn waves-effect waves-light") do %>
        &nbsp;Edit Profile
      <% end %>
    <% end %>
  </div>
</div>
