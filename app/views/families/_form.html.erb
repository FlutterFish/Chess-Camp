<div class="card">    
  <div class="card-content">
    <%= simple_form_for(@family) do |f| %>
      <%= f.error_notification %>
      <div class="row">
        <div class="form-inputs">
          <%= f.input :family_name, label_html: { class: 'active' } %>
          <%= f.input :parent_first_name, label_html: { class: 'active' } %>
        </div>
      </div>
    </div>
</div>
  <div class="row">
    <div class="col s12">
      <%= render :partial => "user_fields", locals: {f: f} %>
    </div>
  </div>
  <div class="row">
    <div class="form-actions col s8">
      <%= f.button :submit %>
    </div>
  </div>
<% end %>