<p id="notice"><%= notice %></p>

<% if @families.empty? %>
  <h3>There are no families in the system at this time</h3>
<% else %>
  <h3>Families</h3>

  <table class="striped highlight">
    <thead>
      <tr>
        <th>Family Name</th>
        <th>Parent First Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Options</th>
      </tr>
    </thead>
  
    <tbody>
      <% @families.each do |family| %>
        <tr>
          <td><%= link_to family.family_name, family %></td>
          <td><%= family.parent_first_name %></td>
          <td><%= family.email %></td>
          <td><%= number_to_phone family.phone %></td>
          <td>
            <%= link_to edit_family_path(family) do %>
              <i class="material-icons">edit</i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <span class="paginate">
    <%= will_paginate @families, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next", :param_name => 'page' %>
  </span>
<% end %>
<br/>
<%= link_to(eval("new_family_path"), class: "btn waves-effect waves-light") do %>
  &nbsp;Add a New Family
<% end %>

