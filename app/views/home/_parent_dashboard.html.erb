<h3>Dashboard</h3>

<div class="row">
  <div class="col s6">
    <div class="card">
      <div class="card-content">
        <%= render :partial => "registrations_list", locals: {registrations: @ongoing_registrations, state: "Ongoing"} %>
      </div>
    </div>
  </div>
  <div class="col s6">
    <div class="card">
      <div class="card-content">
        <%= render :partial => "registrations_list", locals: {registrations: @upcoming_registrations, state: "Upcoming"} %>
      </div>
    </div>
  </div>
</div>

<br/>
<%= link_to(eval("family_path(@family)"), class: "btn waves-effect waves-light") do %>
  My Family
<% end %>
