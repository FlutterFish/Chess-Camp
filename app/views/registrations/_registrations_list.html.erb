  <div class="row">

  <div class= "col s12">
  <p id="notice"><%= notice %></p>
  <h3><%= state %> Registrations</h3>

  <table class="striped highlight">
    <thead>
      <tr>
        <th>Camp Name</th>
        <th>Student Name</th>
        <th>Start Date</th>
        <th>Options</th>
      </tr>
    </thead>

    <tbody>
      <% registrations.each do |reg| %>
        <tr>
          <td><%= link_to reg.camp.name, camp_path(reg.camp) %></td>
          <td><%= link_to reg.student.name, student_path(reg.student) %></td>
          <td><%= display_date(reg.camp.start_date) %></td>
          <td>
            <%= link_to(eval("registration_path(reg)"), method: 'delete', data: {confirm: "Are you sure you want to permanently delete this registration?"}) do %>
              <i class="material-icons icon-red">delete_forever</i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <span class="paginate">
    <%= will_paginate registrations, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
  </span>