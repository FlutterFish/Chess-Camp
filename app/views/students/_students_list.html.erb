
  <h3><%= state %> Students</h3>

  <table class="striped highlight">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date of Birth</th>
        <th>Rating</th>
        <% if can? :update, Student %>
        <th>Options</th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% students.each do |student| %>
        <tr>
          <td><%= link_to student.name, student %></td>
          <td><%= display_date(student.date_of_birth) %></td>
          <td><%= student.rating %></td>
          
          <% if can? :update, Student %>
          <td>
            <%= link_to edit_student_path(student, family_id: student.family.id) do %>
                <i class="material-icons">edit</i>
            <% end %>
          </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <span class="paginate">
    <%= will_paginate students, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
  </span>