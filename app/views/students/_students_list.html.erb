  <div class="row">

  <div class= "col s12">
  <p id="notice"><%= notice %></p>
  <h3><%= state %> Students</h3>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Date of Birth</th>
        <th>Rating</th>
        <% if can? :update, Student %>
        <th colspan="3"></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% students.each do |student| %>
        <tr>
          <td><%= link_to student.name, student %></td>
          <td><%= student.date_of_birth %></td>
          <td><%= student.rating %></td>
          <% if can? :update, Student %>
          <td><%= link_to 'Edit', edit_student_path(student), :class=>"btn waves-effect waves-light" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <span class="paginate">
    <%= will_paginate students, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
  </span>